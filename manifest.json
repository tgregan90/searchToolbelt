{
   "name": "Search Toolbelt",
   "version": "1.0",
   "description": "A toolbelt for the search marketer",
   "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
      "default_popup": "hello.html",
      "default_icon": {
        "16": "get_started16.png",
        "32": "get_started32.png",
        "48": "get_started48.png",
        "128": "get_started128.png"
      }
    },
    "permissions": [
   "activeTab",
   "tabs",
   "storage"
      ],

    "manifest_version": 2
 }
